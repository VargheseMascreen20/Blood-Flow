<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    tools:context=".MakeRequest">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="324dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        android:text="Make a Request"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/patient_name"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:hint="Enter Patient's Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/hospt_name"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Hospital name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/patient_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/patient_name" />

    <EditText
        android:id="@+id/blood_grp"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Blood group"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/hospt_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/hospt_name" />


    <EditText
        android:id="@+id/no_of_units"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter number of units required"
        android:importantForAutofill="no"
        android:inputType="number"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/blood_grp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/blood_grp" />

    <EditText
        android:id="@+id/usr_op_no"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter your OP number"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/no_of_units"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/no_of_units" />


    <EditText
        android:id="@+id/usr_city"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter your city"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/usr_op_no"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/usr_op_no" />

    <EditText
        android:id="@+id/req_date"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Date of the Reuirement"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/usr_op_no"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/usr_city" />

    <Button
        android:id="@+id/post_req"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/submit"
        android:fontFamily="@font/merriweather_sans_light"
        android:text="Post Request"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/req_date"
        app:layout_constraintVertical_bias="0.98" />
</androidx.constraintlayout.widget.ConstraintLayout>